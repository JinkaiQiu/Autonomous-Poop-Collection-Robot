<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wheel_driven">
  <xacro:property name="M_PI" value="3.141592653589793"/>
  <!-- <xacro:property name="radius" value="0.05"/>
  <xacro:property name="thickness" value="0.02"/> -->

  <xacro:macro name="wheel_driven" params="name parent x y z radius thickness">
    <!-- Define the wheel link -->
    <link name="${name}_link">
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
        <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
        <geometry>
          <cylinder radius="${radius}" length="${thickness}"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 ${M_PI/2} ${M_PI/2}" />
          <geometry>
              <cylinder length="${thickness}" radius="${radius}"/>
          </geometry>
      </collision>
    </link>

    <!-- Define the wheel joint -->
    <joint name="${name}_joint" type="continuous">
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="10000" velocity="1000" />
      <dynamics damping="1.0" friction="1.0" />
    </joint>

    <gazebo reference="${name}_link">
      <material>Gazebo/Blue</material>
      <kp>1000000.0</kp> <!-- kp and kd for rubber -->
      <kd>100.0</kd>
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
      <maxVel>1.0</maxVel>
      <minDepth>0.00</minDepth>
    </gazebo>

    <!-- <transmission name="${name}_wheel_joint_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${name}_joint" >
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="${name}_joint_motor">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission> -->

  </xacro:macro>

</robot>